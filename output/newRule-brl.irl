rule newRule {
   property ilog.rules.business_name = "newRule";
   property ilog.rules.package_name = "";
   property status = "new";
   when {
      com.insurance.Insurance_Claim() from insurance;
      evaluate (result : (insurance.newInsurancePolicy()));
      evaluate ((result) == (true));
   } then {
      new_policy_approved = "approved";
      ?context.updateContext();
   } else {
      new_policy_approved = "rejected";
      ?context.updateContext();
   }
}

