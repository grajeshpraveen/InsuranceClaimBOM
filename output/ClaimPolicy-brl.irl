rule ClaimPolicy {
   property ilog.rules.business_name = "ClaimPolicy";
   property ilog.rules.package_name = "";
   property status = "new";
   when {
      com.insurance.New_Policy() from new_Policy;
      evaluate (variable1 : (new_Policy.claimPolicy()));
      evaluate (variable1 > 0);
   } then {
      claimAmount = variable1;
      ?context.updateContext();
   } else {
      claimAmount = 0;
      ?context.updateContext();
   }
}

