rule NewPolicy {
   property ilog.rules.business_name = "NewPolicy";
   property ilog.rules.package_name = "";
   property status = "new";
   when {
      com.insurance.New_Policy() from new_Policy;
      evaluate ((new_Policy.insertPolicy()) == (true));
   } then {
      new_policy_approved = "Approved";
      ?context.updateContext();
   } else {
      new_policy_approved = "rejected";
      ?context.updateContext();
   }
}

